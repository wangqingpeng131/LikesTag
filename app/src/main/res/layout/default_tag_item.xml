<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="24dp"
    android:layout_gravity="center"
    android:background="@drawable/tag_item_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/default_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        tools:text="#природа #nature #красота #россия #russia #travel #осень #фото #beautiful #autumn #photo #лето #небо #love #naturephotography #любовь #горы #жизнь #москва #путешествие #photooftheday #photography #фотография #лес #summer #отдых #пейзаж #landscape #я" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/default_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/home_tag_copy_bg_ic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/default_copy_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:includeFontPadding="false"
            android:layout_marginEnd="60dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/default_copy"
            app:layout_constraintStart_toStartOf="@id/default_copy"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Copy -30" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/coin"
            app:layout_constraintBottom_toBottomOf="@id/default_copy_txt"
            app:layout_constraintStart_toEndOf="@id/default_copy_txt"
            app:layout_constraintTop_toTopOf="@id/default_copy_txt" />

        <ImageView
            android:id="@+id/default_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/tag_favorite_bg_ic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/default_favorite_ic"
            android:layout_width="21dp"
            android:layout_height="18dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/heart_n_ic"
            app:layout_constraintEnd_toEndOf="@id/default_favorite"
            app:layout_constraintStart_toStartOf="@id/default_favorite"
            app:layout_constraintTop_toTopOf="@id/default_favorite" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>